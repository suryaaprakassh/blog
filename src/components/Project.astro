---
import {SquareArrowOutUpRight} from "@lucide/astro"
const {name, description,link} = Astro.props;
---

<div class="card">
    <h3>{name}</h3>
    <p>{description}</p>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-square-arrow-out-up-right-icon lucide-square-arrow-out-up-right"><path d="M21 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h6"/><path d="m21 3-9 9"/><path d="M15 3h6v6"/></svg>
</div>

<style>
    svg {
        background: transparent;
        position: absolute;
        top: 10px;
        right: 10px;
        stroke: #ffffff;
        stroke-width: 1;
        transition: stroke-width 300ms ease;
    }

    div:hover svg{
        stroke-width: 3;
    }

    div {
        position: relative;
        margin: 50px 0;
        padding: 10px;
        cursor: pointer;
        border-bottom: 0.5px solid #ccc;
        transition: 500ms ease-out;
    }

    div:hover {
        background-color: rgba(170,170,170,0.1);
        border-radius: 5px;
        border:none;
    }

    h3 {
        margin: 0;
        background:none;
    }
    p {
        margin: 0;
        font-style: normal;
        background:none;
    }
</style>

<script define:vars={{link}}>
     const card = document.querySelector("div.card");
     card.addEventListener("click",function(){
     window.open(link);
 })
</script>
