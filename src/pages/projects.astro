---
import Project from "../components/Project.astro";
import BaseLayout from "../layout/BaseLayout.astro"
    interface Project {
        name: string;
        description: string;
        link: string;
    }
    const projects:[Project] =  [
        {
            name: "Surnix",
            description: "A toy programming language implemented in python.",
             link: "https://github.com/suryaaprakassh/surnix"
        },
        {
            name: "Dist-Store",
            description: "A mock distributed hash table in golang.",
            link: "https://github.com/suryaaprakassh/dist-store"
        },
        {
            name: "Plaudren",
            description: "A routing framework for golang",
            link: "https://github.com/suryaaprakassh/plaudren"
    },
    ]
---
<BaseLayout>
{
projects.map(p=><Project {...p}/>)
}
</BaseLayout>
